{
  "name": "{{ project_slug }}",
  "esy": {
    "build": "dune build -p #{self.name}",
    {%- if syntax == 'Reason' %}
    "buildDev": "refmterr dune build --root . --only-package #{self.name}",
    {% else %}
    "buildDev": "dune build --root . --only-package #{self.name}",
    {% endif -%}
    "buildEnv": {
      "ODOC_SYNTAX": "{% if syntax == 'Reason' %}re{% else %}ml{% endif %}"
    }
  },
  "dependencies": {
    "@opam/dune": ">= 2.0",
    "@opam/async_kernel": "*",
    "@opam/incr_dom": ">= 0.14",
    "@opam/js_of_ocaml": "*",
    "@opam/ppx_jane": "*",
    "@opam/ppx_deriving": "*",
    {%- if syntax == 'Reason' %}
    "@opam/reason": "*",
    {%- endif %}
    "ocaml": ">= 4.8.0"
  },
  "devDependencies": {
    {% if syntax == 'OCaml' -%}
    "@opam/ocamlformat": "*",
    {% endif -%}
    "@opam/odoc": "*",
    "@opam/utop": "*",
    "ocaml": "~4.12.0",
    {%- if css_framework == 'TailwindCSS' %}
    "autoprefixer": "^10.3.1",
    "tailwindcss": "^2.2.7"
    {%- else -%}
    "serve": "^11.3.2"
    {%- endif %}
  },
  "scripts": {
    "start": "esy serve -s asset/",
    "test": "esy dune build --root . @test/runtest",
    "doc": "esy dune build --root . @doc",
    "doc-path": "esy echo #{self.target_dir}/default/_doc/_html/index.html",
    "fmt": "esy dune build --root . @fmt --auto-promote",
    "watch": "esy dune build --root . --watch",
    "utop": "esy dune utop --root . lib -- -implicit-bindings"
  }
}